{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ESNext"
    ],
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "pretty": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./",
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}