{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@common/*": ["./src/common/*"],
      "@core/*": ["./src/core/*"]
    },
  },
  "exclude": ["node_modules", "dist"]
}
